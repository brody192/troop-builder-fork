{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": ["python"],
            "phases": {
                "setup": {
                    "nixPkgs": ["...", "ruby"]
                },
                "install": {
                    "cmds": ["bundle install"]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "python main.py"
    }
}